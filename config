# Theme config
# my fav themes so far: Pandora, tokyonight, Eldritch
theme = "night-owl"
font-family = Menlo Regular
background-opacity = 0.96
background-blur-radius = 20
unfocused-split-opacity = .8
window-padding-x = 6
# window-padding-y = 4


# KeyBinds
# left
keybind = ctrl+h=goto_split:left
keybind = ctrl+left=goto_split:left
# right
#keybind = ctrl+l=goto_split:right
keybind = ctrl+right=goto_split:right
# up
keybind = ctrl+k=goto_split:top
keybind = ctrl+up=goto_split:top
# down
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+down=goto_split:bottom
#resize
keybind	= ctrl+minus=resize_split:left,50
keybind	= ctrl+equal=resize_split:right,50
keybind	= shift+ctrl+up=resize_split:up,50
keybind	= shift+ctrl+down=resize_split:down,50
keybind = global:cmd+shift+space=toggle_quick_terminal
